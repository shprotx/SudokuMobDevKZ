<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Theme.Sudoku_MobDevKZ.FullScreen" parent="">
        <item name="android:background">@color/black</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">30dp</item>
    </style>

    <style name="Widget.Theme.SudokuMobDevKZ.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.SudokuMobDevKZ.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <!-- Text styles -->
    <style name="DraftNumbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0sp</item>
        <item name="android:textSize">?attr/draftNumbersSizeTheme</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <!--<item name="android:textColor">@color/black</item>-->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="NumberButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">?attr/draftOfColorTheme</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="TextOverGrid" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">?attr/textOverGridSize</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="statisticTittleText">
        <item name="android:padding">20dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="statisticValuesText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NeoText" parent="Widget.Neumorph.TextView">
        <item name="android:textColor">?attr/pageBackground</item>
        <item name="neumorph_shadowColorLight">?attr/buttonShadowLightTheme</item>
        <item name="neumorph_shadowColorDark">?attr/buttonShadowDarkTheme</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- /Text styles -->


    <!-- Buttons styles -->
    <style name="TextButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="IconButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="CardViewButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/pageBackground</item>
    </style>

    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">40dp</item>
    </style>

    <style name="NeoButtons" parent="Widget.Neumorph.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">104dp</item>
        <item name="android:textSize">?attr/textButtonsSize</item>
        <item name="android:layout_marginStart">43dp</item>
        <item name="android:layout_marginEnd">43dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/buttonTextColorTheme</item>
        <item name="textAllCaps">false</item>
        <item name="neumorph_shadowColorLight">?attr/buttonShadowLightTheme</item>
        <item name="neumorph_shadowColorDark">?attr/buttonShadowDarkTheme</item>
    </style>

    <style name="NeoRateButtons" parent="NeoButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
    <!-- /Buttons styles -->


    <!-- Other -->
    <style name="Widget.MaterialComponents.CardView.Statistic" parent="Widget.Neumorph.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:backgroundTint">?attr/pageBackground</item>
        <item name="neumorph_shapeType">pressed</item>
        <item name="neumorph_shadowColorLight">?attr/buttonShadowLightTheme</item>
        <item name="neumorph_shadowColorDark">?attr/buttonShadowDarkTheme</item>
    </style>



    <style name="IconUndo" parent="IconButtons">
        <item name="android:src">@drawable/undo</item>
    </style>
    <style name="IconErase" parent="IconButtons">
        <item name="android:src">@drawable/erase</item>
    </style>
    <style name="IconDraft" parent="IconButtons">
        <item name="android:src">@drawable/draft_selector</item>
    </style>
    <style name="IconLight" parent="IconButtons">
        <item name="android:src">@drawable/ask_selector</item>
    </style>



</resources>